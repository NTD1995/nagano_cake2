<div class = "container">
  <div class="row" style="margin: 40px 0;">
    <div class="col-lg-12 d-flex align-items-center justify-content-between">
      <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px; display: inline-block;">
        <h4 style="margin: 0;">クーポン編集</h4>
      </div>
    </div>
  </div>

  <%= form_with model: [:admin, @coupon], local: true do |f| %>
    <div>
      <%= f.label :code, "クーポンコード" %><br>
      <%= f.text_field :code %>
    </div>

    <div>
      <%= f.label :discount_price, "割引金額" %><br>
      <%= f.number_field :discount_price %>
    </div>

    <div>
      <%= f.label :minimum_order_amount, "最低注文金額" %><br>
      <%= f.number_field :minimum_order_amount %>
    </div>

    <div>
      <%= f.label :is_active, "有効" %><br>
      <%= f.check_box :is_active %>
    </div>

    <div>
      <%= f.label :valid_from, "有効期間（開始）" %><br>
      <%= f.date_field :valid_from %>
    </div>

    <div>
      <%= f.label :valid_until, "有効期間（終了）" %><br>
      <%= f.date_field :valid_until %>
    </div>

    <div>
      <%= f.submit "変更を保存", class: "btn btn-success mt-3" %>
      <%= link_to "一覧に戻る", admin_coupons_path, class: "btn btn-primary mt-3" %>
    </div>
  <% end %>


</div>