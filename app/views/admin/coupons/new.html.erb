<div class = "container">
  <div class="row" style="margin: 40px 0;">
    <div class="col-lg-12 d-flex align-items-center justify-content-between">
      <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px; display: inline-block;">
        <h4 style="margin: 0;"><%= @coupon.new_record? ? "新規クーポン作成" : "クーポン編集" %></h4>
      </div>
    </div>
  </div>

  <%= form_with model: [:admin, @coupon], local: true do |f| %>
    <div>
      <%= f.label :code, "クーポンコード" %><br>
      <%= f.text_field :code %>
    </div>

    <div>
      <%= f.label :discount_price, "割引金額（円）" %><br>
      <%= f.number_field :discount_price %>
    </div>

    <div>
      <%= f.label :minimum_order_amount, "最低注文金額（円）" %><br>
      <%= f.number_field :minimum_order_amount %>
    </div>

    <div>
      <%= f.label :is_active, "このクーポンを有効にする" %><br>
      <%= f.check_box :is_active %>
    </div>

    <div>
      <%= f.label :customer_id, "クーポンの対象顧客" %><br>
      <%= f.collection_select :customer_id, Customer.all, :id, :email, prompt: "未指定（全員対象）" %>
    </div>

    <%= f.submit "新規クーポン作成", class: "btn btn-primary" %>
  <% end %>
</div>