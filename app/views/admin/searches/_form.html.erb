<% if admin_signed_in? %>
  <%= form_with url: admin_search_path, method: :get, local: true, html: { style: "display:flex; gap:8px;" } do |form| %>
    <%= form.text_field :keyword, placeholder: "検索キーワード", value: params[:keyword] %>

    <%= form.select :target, options_for_select([["商品", "item"], ["会員", "customer"]], params[:target]) %>

    <%= form.select :match_type, options_for_select([
        ["完全一致", "exact"],
        ["部分一致", "partial"],
        ["前方一致", "forward"],
        ["後方一致", "backward"]
      ], params[:match_type]) %>

    <%= form.submit "検索" %>
  <% end %>
<% end %>
