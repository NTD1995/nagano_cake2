<% if admin_signed_in? %>
  <form action="/search" method="get" style="display:flex; gap:8px;">
    <input type="text" name="keyword" placeholder="検索キーワード" value="<%= params[:keyword] %>">

    <select name="target">
      <option value="item" <%= 'selected' if params[:target] == 'item' %>>商品</option>
      <option value="customer" <%= 'selected' if params[:target] == 'customer' %>>会員</option>
    </select>

    <select name="match_type">
      <option value="exact" <%= 'selected' if params[:match_type] == 'exact' %>>完全一致</option>
      <option value="partial" <%= 'selected' if params[:match_type] == 'partial' %>>部分一致</option>
      <option value="forward" <%= 'selected' if params[:match_type] == 'forward' %>>前方一致</option>
      <option value="backward" <%= 'selected' if params[:match_type] == 'backward' %>>後方一致</option>
    </select>

    <button type="submit">検索</button>
  </form>

<% end %>