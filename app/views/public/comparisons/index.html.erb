<h1>比較リスト</h1>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
      <th>ジャンル</th>
      <th>説明</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @compared_items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price_excluding_tax %>円</td>
        <td><%= item.genre.name %></td>
        <td><%= item.introduction %></td>
        <td>
          <%= button_to '削除', remove_comparison_path(item_id: item.id), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
