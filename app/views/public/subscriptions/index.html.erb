<div class="container">
  <div class="row" style="margin: 20px;">
    <div class="col-lg-12 d-flex align-items-center justify-content-between">
      <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px;">
        <h4 style="margin: 0;"><h4>定期購入一覧</h4>
      </div>
    </div>
  </div>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>数量</th>
        <th>配送間隔（日）</th>
        <th>次回配送日</th>
        <th>状態</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @subscriptions.each do |sub| %>
        <tr>
          <td><%= sub.item.name %></td>
          <td><%= sub.quantity %></td>
          <td><%= sub.interval_days %></td>
          <td><%= sub.next_delivery_date %></td>
          <td><%= sub.status %></td>
          <td>
            <% if sub.status == "active" %>
              <%= link_to "編集する", edit_item_subscription_path(@item, subscription), class: "btn btn-success mr-2" %>
              <%= link_to "解約する", cancel_item_subscription_path(@item, subscription), method: :patch, data: { confirm: "本当に解約しますか？" }, class: "btn btn-danger" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>